{
  "name": "simple-dark",
  "displayName": "Simple Dark",
  "publisher": "travis",
  "description": "A minimalist theme suite for focus. Includes Simple Dark & Light Soft (Eye-friendly) modes.",
  "version": "1.4.2",
  "icon": "logo.png",
  "keywords": [
    "simple theme",
    "simple dark",
    "simple light",
    "minimalist",
    "eye friendly",
    "soft theme",
    "focus",
    "reader mode",
    "clean",
    "dark theme",
    "light theme",
    "warm",
    "pastel",
    "productivity",
    "day",
    "night",
    "syntax"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HondryTravis/simple-dark.git"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Themes"
  ],
  "scripts": {
    "start": "nodemon --watch './packages/**/*.js' --exec 'npm run build'",
    "build": "node build.js",
    "wcag": "node wcag-check.js",
    "deploy": "sh scripts/deploy.sh",
    "theme:build": "vsce package",
    "theme:publish": "vsce publish"
  },
  "contributes": {
    "themes": [
      {
        "label": "Simple Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      },
      {
        "label": "Simple Dark Soft",
        "uiTheme": "vs-dark",
        "path": "./themes/dark-soft.json"
      },
      {
        "label": "Simple Light",
        "uiTheme": "vs",
        "path": "./themes/light.json"
      },
      {
        "label": "Simple Light Soft",
        "uiTheme": "vs",
        "path": "./themes/light-soft.json"
      }
    ]
  },
  "devDependencies": {
    "color": "^4.0.0",
    "nodemon": "^2.0.22"
  }
}
